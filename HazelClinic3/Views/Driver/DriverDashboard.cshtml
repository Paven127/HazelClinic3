@{
    ViewBag.Title = "Driver Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .container {
        max-width: 1200px;
        margin: 0 auto;
    }

    .jumbotron {
        background: none;
        color: #333;
        text-align: center;
        padding: 40px;
        margin-bottom: 20px;
        margin-top: 50px;
    }

    h1 {
        font-size: 36px;
        margin-bottom: 20px;
    }

    .row {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 20px;
        margin-top: 30px;
    }

    .col-md-4 {
        flex-basis: calc(33.33% - 20px);
    }

    .card {
        width: 100%;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-between;
        border: 1px solid #ddd;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);
    }

        .card img {
            max-width: 100%;
            max-height: 100px;
            object-fit: contain;
        }

    .card-title {
        font-size: 18px;
        font-weight: bold;
        margin-top: 10px;
    }

    .card-text {
        font-size: 14px;
        color: #555;
        margin-top: 10px;
    }

    .btn-card {
        margin-top: 15px;
        width: 100%;
    }
</style>

<div class="container mt-5">
    <div class="jumbotron">
        <h1 class="display-4">Welcome to your Driver Dashboard</h1>
        <p class="lead">Manage your tasks efficiently.</p>
    </div>

    <div class="row">
        <div class="col-md-4">
            <div class="card mb-3">
                <img src="~/Content/themes/base/images/images (3).jpeg" alt="User Icon" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">View Ongoing Deliveries</h5>

                    <a href="@Url.Action("Ongoing", "Driver", new { area = "" })" class="btn btn-primary btn-block btn-card">View</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-3">
                <img src="~/Content/themes/base/images/images (1).png" alt="Booking Icon" class="card-img-top" />
                <div class="card-body">
                    <h5 class="card-title">View Completed Deliveries</h5>

                    <a href="@Url.Action("Completed", "Driver", new { area = "" })" class="btn btn-primary btn-block btn-card">View</a>
                </div>
            </div>
        </div>

    </div>
</div>