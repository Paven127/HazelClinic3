@model HazelClinic3.Models.Reschedule

@{
    ViewBag.Title = "Reschedule Appointment";
}

<style>
    .form-container {
        max-width: 500px;
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 20px;
    }

    .btn-submit {
        width: 100%;
        padding: 10px;
        background-color: #007bff;
        color: #fff;
        border: none;
        border-radius: 5px;
        cursor: pointer;
    }

        .btn-submit:hover {
            background-color: #0056b3;
        }
</style>

<h2 class="text-center">Enter Date and Time:</h2>
<p></p>
<p></p>
<div class="form-container">
    @using (Html.BeginForm("RescheduleAppointment", "Appointments", FormMethod.Post, new { id = "rescheduleForm", @class = "form-horizontal" }))
    {
        @Html.AntiForgeryToken()

        <h4 class="text-center"></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.AppointmentId)

        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.AppoinmentDate, "Appointment Date", htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.AppoinmentDate, new { htmlAttributes = new { @class = "form-control", type = "date", min = DateTime.Now.ToString("yyyy-MM-dd") } })
                @Html.ValidationMessageFor(model => model.AppoinmentDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                @Html.LabelFor(model => model.AppointmentTime, "Appointment Time", htmlAttributes: new { @class = "control-label" })
                <select class="form-control" id="AppointmentTime" name="AppointmentTime">
                    <option value="08:00">08:00 AM</option>
                    <option value="09:00">09:00 AM</option>
                    <option value="10:00">10:00 AM</option>
                    <option value="11:00">11:00 AM</option>
                    <option value="12:00">12:00 PM</option>
                    <option value="13:00">01:00 PM</option>
                    <option value="14:00">02:00 PM</option>
                    <option value="15:00">03:00 PM</option>
                    <option value="16:00">04:00 PM</option>
                    <option value="17:00">05:00 PM</option>
                </select>
                @Html.ValidationMessageFor(model => model.AppointmentTime, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-12">
                <button type="submit" class="btn-submit">Submit</button>
            </div>
        </div>
    }
</div>

@functions {
    public List<SelectListItem> GetTimeOptions()
    {
        return new List<SelectListItem>
{
        new SelectListItem { Text = "08:00 AM", Value = "08:00" },
        new SelectListItem { Text = "09:00 AM", Value = "09:00" },
        new SelectListItem { Text = "10:00 AM", Value = "10:00" },
        new SelectListItem { Text = "11:00 AM", Value = "11:00" },
        new SelectListItem { Text = "12:00 PM", Value = "12:00" },
        new SelectListItem { Text = "13:00 PM", Value = "13:00" },
        new SelectListItem { Text = "14:00 PM", Value = "14:00" },
        new SelectListItem { Text = "15:00 PM", Value = "15:00" },
        new SelectListItem { Text = "16:00 PM", Value = "16:00" },
        new SelectListItem { Text = "17:00 PM", Value = "17:00" }
    };
    }
}

<style>
    .back-to-appointment-btn {
        color: #fff;
        background-color: #6c757d;
        border-color: #6c757d;
        padding: 10px 20px;
        border-radius: 5px;
        text-decoration: none;
    }

        .back-to-appointment-btn:hover {
            background-color: #5a6268;
            border-color: #5a6268;
        }
</style>

<div class="text-center">
    @Html.ActionLink("Back to Appointment", "AppointmentInfo", null, new { @class = "back-to-appointment-btn" })
</div>


