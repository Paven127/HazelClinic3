@model IEnumerable<HazelClinic3.Models.Volunteer>

<h2>View Volunteer Requests:</h2>

<table class="table">
    <thead>
        <tr>
            <th>Volunteer ID</th>
            <th>Full Name</th>
            <th>Surname</th>
            <th>Email</th>
            <th>Cell Number</th>
            <th>Emergency Contact Name</th>
            <th>Emergency Contact Cell Number</th>
            <th>Experience</th>
            <th>Availability</th>
            <th>Volunteer Type</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.VolunteerId</td>
                <td>@item.FullName</td>
                <td>@item.Surname</td>
                <td>@item.Email</td>
                <td>@item.CellNo</td>
                <td>@item.EmergencyContactName</td>
                <td>@item.EmergencyContactCellNo</td>
                <td>@item.Experience</td>
                <td>@item.Availability</td>
                <td>@item.VolunteerType</td>
                <td>
                    @Html.ActionLink("Approve", "Approve", new { id = item.VolunteerId }, new { @class = "btn btn-success" })
                    @Html.ActionLink("Decline", "Decline", new { id = item.VolunteerId }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }
    </tbody>
</table>
<p></p>
@Html.ActionLink("Back to Admin Dashboard", "AdminLog", "Users2", null, new { @class = "btn btn-secondary" })
