<style>
    body {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        margin: 0;
    }

    p {
        text-align: center;
        margin: 15px 0;
    }

    /* Centering the headings */
    .centered-text {
        text-align: center; /* Horizontally center text */
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
    }

    .left-column, .right-column {
        width: 50%;
        box-sizing: border-box;
        padding: 10px;
    }

    .background-container {
        background-color: #f0f0f0; /* Light grey background */
        padding: 20px; /* Adjust the padding as needed */
        width: 48%; /* Equal width for both containers */
        display: flex;
        flex-direction: column;
        justify-content: flex-start; /* Start content at the top */
        align-items: center;
        box-sizing: border-box; /* Include padding and border in width */
    }

        .background-container h2,
        .background-container p,
        .background-container ul,
        .background-container table {
            text-align: center;
            width: 100%; /* Ensure elements take full width inside container */
        }

        .background-container ul {
            padding-left: 80px; /* Left padding for list items */
            font-size: 18px;
            list-style-type: none; /* Remove default list styles */
        }

        .background-container table {
            margin-top: 20px; /* Space between paragraphs and table */
        }

    .centered-button-container {
        text-align: center; /* Center-align the content horizontally */
    }

    .black-outline-button {
        background-color: #003366; /* Deep blue color */
        border: 2px solid #003366; /* Border matching the background color */
        color: white; /* White text color */
        font-size: 1.1em; /* Increase the font size */
        padding: 12px 100px; /* Increase the size of the button */
        border-radius: 5px; /* Rounded corners */
        cursor: pointer;
        display: block;
        margin: 20px auto; /* Center the button with margin */
    }

        .black-outline-button:hover {
            background-color: #002244; /* Darker blue on hover */
            border-color: #002244; /* Match the border color on hover */
        }

    /* Navbar styling */
    .navbar {
        width: 100%;
        background-color: #333;
        overflow: hidden;
        position: fixed;
        top: 0;
        left: 0;
        z-index: 1000;
    }

        .navbar a {
            float: left;
            display: block;
            color: white;
            text-align: left;
            padding: 7px 9px;
            text-decoration: none;
        }

            .navbar a:hover {
                background-color: #ddd;
                color: black;
            }

    /* Adjust body padding to prevent content overlap with navbar */
    body {
        padding-top: 120px;
    }

    /* Container for the cards */
    .card-container {
        display: flex;
        justify-content: space-around; /* Space evenly between cards */
        margin: 20px auto;
        width: 90%;
    }

    /* Style for each flip card */
    .flip-card {
        width: 300px;
        height: 400px;
        perspective: 1000px; /* Add 3D effect */
        position: relative;
    }

    /* Style for the inner part of the flip card */
    .flip-card-inner {
        width: 100%;
        height: 100%;
        position: relative;
        transition: transform 0.6s; /* Smooth flipping animation */
        transform-style: preserve-3d; /* Maintain 3D effect */
    }

    /* Style for the front side of the flip card */
    .flip-card-front, .flip-card-back {
        width: 100%;
        height: 100%;
        position: absolute;
        backface-visibility: hidden; /* Hide backside until flip */
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        background-color: #f0f0f0; /* Light grey background */
        padding: 20px;
        text-align: center;
        background-size: cover; /* Ensures image covers entire front */
        background-position: center; /* Center image */
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2); /* Optional: add shadow for card */
    }

    /* Style for the back side of the flip card */
    .flip-card-back {
        transform: rotateY(180deg); /* Start flipped to the back */
        display: flex;
        justify-content: center; /* Center horizontally */
        align-items: center; /* Center vertically */
        height: 100%; /* Ensures the card fills the entire back area */
        padding: 50px; /* Adjust padding as needed */
        text-align: center; /* Center align text within the card */
    }

    /* Style for heading and paragraph inside the flip card */
    .card-text {
        margin-top: auto; /* Push content to the top */
    }

        .card-text h2 {
            font-size: 24px;
            margin-bottom: 10px;
        }

        .card-text p {
            font-size: 16px;
        }

    /* Flip animation effect */
    .flip-card:hover .flip-card-inner {
        transform: rotateY(180deg); /* Rotate to show back side */
    }

    .background-container2 {
        background-color: #f0f0f0; /* Light grey background */
        padding: 20px; /* Adjust padding as needed */
        margin-bottom: 20px; /* Space below the container */
        width: 90%; /* Set container width */
        max-width: 1500px; /* Maximum width of the container */
        margin: 0 auto; /* Center align container */
    }

    .centered-text2 {
        text-align: center;
        margin-bottom: 10px; /* Space below centered text */
    }
</style>

