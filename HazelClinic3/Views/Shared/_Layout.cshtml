<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - HazelView Clinic</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

   
    <script type="text/javascript">
        var Tawk_API = Tawk_API || {}, Tawk_LoadStart = new Date();
        (function () {
            var s1 = document.createElement("script"), s0 = document.getElementsByTagName("script")[0];
            s1.async = true;
            s1.src = 'https://embed.tawk.to/663509eaa5f95410285f3b7c/1hsvitg4j';
            s1.charset = 'UTF-8';
            s1.setAttribute('crossorigin', '*');
            s0.parentNode.insertBefore(s1, s0);
        })();
    </script>
  
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .navbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            background-color: #333;
            padding: 0 20px;
            height: 100px;
        }

            .navbar a {
                color: #fff;
                text-decoration: none;
                font-size: 20px;
                font-family: Constantia;
                margin-left: 20px;
            }

                .navbar a:hover {
                    color: black;
                }

        .navbar-brand img {
            height: 80px;
            max-width: 100px;
            margin-right: auto;
        }

        footer {
            text-align: center;
            margin-top: 20px;
        }

        .navbar-nav {
            display: flex;
            flex-direction: row;
            justify-content: flex-start;
            margin-left: 0;
        }

            .navbar-nav li {
                list-style: none;
            }
    </style>
</head>
<body>

    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-secondary">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/Content/themes/base/images/SPCA_logo.png" />
            </a>

            <button type="button" class="navbar-toggler" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" title="Toggle navigation" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav flex-grow-1">
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-brand" })</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-brand" })</li>
                    @if (Session["Login"] != null && (bool)Session["Login"])
                    {
                        <li>@Html.ActionLink("Logout", "Logout", "Users2", new { area = "" }, new { @class = "nav-brand" })</li>
                        <li><a href="@Url.Action("MyProfile", "Users2")" class="nav-brand">My Profile</a></li>
                        <li><a href="@Url.Action("LoggedIn", "Users2")" class="nav-brand">Back To Home</a></li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Login", "Login", "Users2", new { area = "" }, new { @class = "nav-brand" })</li>
                        <li>@Html.ActionLink("Register", "Register", "Users2", new { area = "" }, new { @class = "nav-brand" })</li>
                    }

                </ul>
            </div>
        </div>
    </nav>


    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - SPCA Durban & Coast</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

