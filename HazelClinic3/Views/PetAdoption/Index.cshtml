                    <a href="@Url.Action("AdoptionForm", "PetAdoption", new { petId = 5 })" class="btn btn-primary">Click here to adopt today</a>
                </div>
            </div>

            <div class="pet">
                <img src="~/Content/themes/base/images/german-shepherd-rescue-and-adoption.jpg" alt="Pet 6">
                <div class="pet-description">
                    <h2>Daisy</h2>
                    <p>Age: 1 year</p>
                    <p>Breed: German Shepherd</p>
                    <p>Personality: Curious and playful</p>
                    <a href="@Url.Action("AdoptionForm", "PetAdoption", new { petId = 6 })" class="btn btn-primary">Click here to adopt today</a>
                </div>

            </div>

        </div>
    </div>
</body>
</html>