@model HazelClinic3.Models.AdoptionRequest

@{
    ViewBag.Title = "Edit Adoption Request";
}

<h2>Edit Adoption Request:</h2>

@using (Html.BeginForm("Edit", "PetAdoption", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        @Html.LabelFor(model => model.Adopterinterested, "Adopter Interested")
        @Html.EditorFor(model => model.Adopterinterested, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.Adopterinterested)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AdopterFName, "Full Name")
        @Html.EditorFor(model => model.AdopterFName, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.AdopterFName)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AdopterNo, "Contact Number")
        @Html.EditorFor(model => model.AdopterNo, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.AdopterNo)
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.AdopterEmail, "Email")
        @Html.EditorFor(model => model.AdopterEmail, new { htmlAttributes = new { @class = "form-control" } })
        @Html.ValidationMessageFor(model => model.AdopterEmail)
    </div>

    <p></p>
    <div class="button-group">
        <button type="submit" class="btn btn-primary">Save</button>
        @Html.ActionLink("Cancel", "ViewAdoptions", "PetAdoption", null, new { @class = "btn btn-secondary" })
    </div>
}


