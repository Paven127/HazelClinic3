@model HazelClinic3.Models.AdoptionRequest

@{
    ViewBag.Title = "Delete Adoption Request";
}

<h2>Delete Adoption Request</h2>

<div>
    <h4>Are you sure you want to delete this adoption request?</h4>
    <table class="table">
        <tr>
            <th>ID</th>
            <td>@Model.ID</td>
        </tr>
        <tr>
            <th>Adopter Interested</th>
            <td>@Model.Adopterinterested</td>
        </tr>
        <tr>
            <th>Full Name</th>
            <td>@Model.AdopterFName</td>
        </tr>
        <tr>
            <th>Contact Number</th>
            <td>@Model.AdopterNo</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>@Model.AdopterEmail</td>
        </tr>
    </table>
    <hr />

    @Html.ActionLink("Back to List", "ViewAdoptions", "PetAdoption", null, new { @class = "btn btn-secondary" })
    <p></p>
    @using (Html.BeginForm("DeleteConfirmed", "PetAdoption", new { id = Model.ID }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        <input type="submit" value="Delete" class="btn btn-danger" />
    }
</div>
